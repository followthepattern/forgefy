
apiVersion: api.cerbos.dev/v1
resourcePolicy:
  version: "default"
  resource: "{{ .FeatureNameLowerCamel }}"
  rules:
    - actions:
        - read
      effect: EFFECT_ALLOW
      roles:
        - {{ .FeatureNameLowerCamel }}:viewer

    - actions:
        - create
        - read
        - update
        - delete
      effect: EFFECT_ALLOW
      roles:
        - {{ .FeatureNameLowerCamel }}:editor