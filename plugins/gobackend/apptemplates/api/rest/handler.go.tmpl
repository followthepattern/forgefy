package rest

import (
	"net/http"

	"github.com/{{ .AppNameToPackageName }}/controllers"
	"github.com/{{ .AppNameToPackageName }}/features/auth"
{{- $AppNameToPackageName := .AppNameToPackageName }}
{{- range .Features }}
	"github.com/{{ $AppNameToPackageName }}/features/{{ .PackageName }}"
{{- end }}
	"github.com/go-chi/chi"
)

func New(ctrls controllers.Controllers) http.Handler {
	r := chi.NewMux()

	auth := auth.NewAuthRest(ctrls.Auth())
	{{ range .Features }}
	{{ .FeatureNameLowerCamel }} := {{ .PackageName }}.New{{ .FieldTypeGoName }}Rest(ctrls.{{ .FieldTypeGoName}}())
	r.Route("/{{ .FeatureURL }}s", func(r chi.Router) {
		r.Get("/", {{ .FeatureNameLowerCamel }}.Get)
		r.Get("/id", {{ .FeatureNameLowerCamel }}.GetByID)
		r.Post("/", {{ .FeatureNameLowerCamel }}.Create)
		r.Post("/id", {{ .FeatureNameLowerCamel }}.Update)
	})
	{{ end }}
	r.Route("/authuser", func(r chi.Router) {
		r.Get("/activate/{userID}", auth.ActivateUser)
	})

	return r
}
