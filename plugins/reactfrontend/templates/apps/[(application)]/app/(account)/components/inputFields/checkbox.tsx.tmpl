import React from "react";
import classNames from "classnames";

const Checkbox = React.forwardRef((props: React.DetailedHTMLProps<React.InputHTMLAttributes<HTMLInputElement>, HTMLInputElement>, ref: React.ForwardedRef<HTMLInputElement>) => {
    const [isChecked, setIsChecked] = React.useState(props.checked);

    return (
        <input
            ref={ref}
            {...props}
            type="checkbox"
            checked={isChecked}
            onChange={e => setIsChecked(e.target.checked)}
            className={
                classNames(props.className, "mt-2 w-6 h-6 rounded-lg ring-1 ring-inset ring-gray-100 border border-gray-stroke-weak focus:ring-0 focus:ring-inset data-[checked]:bg-brand")}
        />
    )
})

export default Checkbox;