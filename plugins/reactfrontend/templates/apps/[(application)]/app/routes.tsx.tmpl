import { RouteObject } from "react-router-dom"

import AuthLayout from "./(auth)/layout"
import AccountLayout from "./(account)/layout"
import ListLayout from "./(account)/layouts/listLayout"
import UserSingleLayout from "./(account)/user/(single)/layout"

import Login from "./(auth)/login/page"
import Register from "./(auth)/register/page"

import Profile from "./(account)/profile/page"

import UserList from "./(account)/user/page"
import UserSingle from "./(account)/user/(single)/[id]/page"
import UserEdit from "./(account)/user/(single)/[id]/edit/page"
import UserNew from "./(account)/user/(single)/new/page"
{{ range $feature := .Features }}
import {{ $feature.FeatureName | UpperCamelCase }}List from "./(account)/{{ $feature.FeatureName | LowerCamelCase }}/page"
import {{ $feature.FeatureName | UpperCamelCase }}Single from "./(account)/{{ $feature.FeatureName | LowerCamelCase }}/(single)/[id]/page"
import {{ $feature.FeatureName | UpperCamelCase }}Edit from "./(account)/{{ $feature.FeatureName | LowerCamelCase }}/(single)/[id]/edit/page"
import {{ $feature.FeatureName | UpperCamelCase }}New from "./(account)/{{ $feature.FeatureName | LowerCamelCase }}/(single)/new/page"
import {{ $feature.FeatureName | UpperCamelCase }}SingleLayout from "./(account)/{{ $feature.FeatureName | LowerCamelCase }}/(single)/layout"
{{ end }}
export const Routes: RouteObject[] = [
    {
        path: "/",
        element: <AuthLayout />,
        children: [{
            path: "/",
            element: <Login />,

    }]
    },
    {
        path: "/",
        element: <AuthLayout />,
        children: [
            {
                path: "/login",
                element: <Login />
            }
        ]
    },
    {
        path: "/",
        element: <AuthLayout />,
        children: [
            {
                path: "/register",
                element: <Register />
            }
        ]
    },
    {
        path: "/",
        element: <AccountLayout />,
        children: [
            {
                path: "/profile",
                element: <Profile />
            },
            {
                path: "user",
                element: <ListLayout />,
                children: [
                    {
                        path: "",
                        element: <UserList />
                    }
                ]
            },
            {
                path: "user",
                element: <UserSingleLayout />,
                children: [
                    {
                        path: ":id",
                        element: <UserSingle />
                    },
                    {
                        path: "new",
                        element: <UserNew />
                    },
                    {
                        path: ":id/edit",
                        element: <UserEdit />
                    },
                ]
            },
{{- range $feature := .Features }}
            {
                path: "{{ $feature | URL }}",
                element: <ListLayout />,
                children: [
                    {
                        path: "",
                        element: <{{ $feature.FeatureName | UpperCamelCase }}List />
                    }
                ]
            },
            {
                path: "{{ $feature | URL }}",
                element: <{{ $feature.FeatureName | UpperCamelCase }}SingleLayout />,
                children: [
                    {
                        path: ":id",
                        element: <{{ $feature.FeatureName | UpperCamelCase }}Single />
                    },
                    {
                        path: "new",
                        element: <{{ $feature.FeatureName | UpperCamelCase }}New />
                    },
                    {
                        path: ":id/edit",
                        element: <{{ $feature.FeatureName | UpperCamelCase }}Edit />
                    },
                ]
            },
{{- end }}
        ]
    }
]