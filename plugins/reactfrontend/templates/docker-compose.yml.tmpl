version: '3'

services:
  {{ .AppName }}:
    image: node:21.2.0
    hostname: {{ .AppName }}
    container_name: {{ .AppName }}
    command: bash -c "npm install && npm start"
    environment:
      - NODE_ENV=development
    ports:
      - 3000:3000
      - 9999:9999
    user: node
    working_dir: /usr/src/app
    volumes:
      - ./:/usr/src/app:rw